<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amaze.filemanager"
    android:versionCode="31"
    android:versionName="3.0.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="Amaze" >
        <activity
            android:name="com.amaze.filemanager.activities.MainActivity"
            android:label="Amaze"
            android:theme="@style/appCompatLight" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.GET_CONTENT" />

                <data android:mimeType="*/*" />

                <category android:name="android.intent.category.OPENABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!--
            <intent-filter>
                <action android:name="android.intent.action.RINGTONE_PICKER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data android:mimeType="application/zip" />
                <data android:mimeType="application/x-rar-compressed" /> <!-- <category android:name="android.intent.category.OPENABLE" /> -->
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amaze.filemanager.activities.Preferences"
            android:label="@string/setting"
            android:theme="@style/appCompatLight"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="com.amaze.filemanager.activities.TextReader"
            android:label="@string/textreader"
            android:theme="@style/appCompatLight" >
            <intent-filter android:label="Amaze Text Editor" >
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amaze.filemanager.activities.DbViewer"
            android:label="@string/databasereader"
            android:screenOrientation="locked"
            android:theme="@style/appCompatLight" >
            <intent-filter android:label="Amaze Database Reader" >
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="db/*" />
            </intent-filter>
        </activity>

        <service
            android:name="com.amaze.filemanager.services.ExtractService"
            android:label="Extracting" >
        </service>
        <service
            android:name="com.amaze.filemanager.services.ZipTask"
            android:label="Compressing" >
        </service>
        <service
            android:name="com.amaze.filemanager.services.CopyService"
            android:label="Copying" >
        </service>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>