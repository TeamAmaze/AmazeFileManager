<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:minHeight="100dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/t5"
                android:text="@string/calculating"
                android:paddingLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:fontFamily="sans-serif-medium" />
            <TextView
                android:id="@+id/t6"
                android:text="@string/calculating"
                android:paddingLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/t7"
                android:paddingLeft="3dp"
                android:text="@string/calculating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/t8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="@string/calculating"/>
        </LinearLayout>
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/md5"
                android:id="@+id/md5"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/t9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="@string/calculating"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_height="9dp"
        android:layout_width="match_parent"
        android:id="@+id/divider"
        android:background="@android:color/transparent"
        android:src="@color/divider"
        android:paddingTop="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/dirprops"
        android:orientation="horizontal">
        <com.amaze.filemanager.ui.views.SizeDrawable
            android:id="@+id/sizedrawable"
            android:layout_width="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:minHeight="100dp">
            <TableRow>
                <ImageButton
                    android:src="@android:color/transparent"
                    android:layout_width="30dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:minWidth="10dp"
                    android:padding="5dp"
                    android:layout_height="30dp"
                    />
                <TextView
                    android:text="@string/total"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/t1"
                    android:text="@string/calculating"
                    android:padding="3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    />

            </TableRow>
            <TableRow>
                <ImageButton
                    android:src="#4CAF50"
                    android:layout_width="30dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:minWidth="10dp"
                    android:padding="5dp"
                    android:layout_height="30dp"
                    />
                <TextView
                    android:text="@string/free"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/t2"
                    android:text="@string/calculating"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="3dp"
                    />

            </TableRow>
            <TableRow>

                <ImageButton
                    android:src="#E53930"
                    android:layout_width="30dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:minWidth="10dp"
                    android:padding="5dp"
                    android:layout_height="30dp"
                    />
                <TextView
                    android:text="@string/used"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/t3"
                    android:text="@string/calculating"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="3dp"
                    />

            </TableRow>
            <TableRow>

                <ImageView
                    android:src="#0D47A1"
                    android:layout_width="30dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:minWidth="10dp"
                    android:padding="5dp"
                    android:layout_height="30dp"
                    />
                <TextView
                    android:text="@string/size"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/t4"
                    android:text="@string/calculating"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="3dp"
                    />

            </TableRow>
        </TableLayout>

    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/permission"
        android:id="@+id/appX"
        android:visibility="gone"
/>

<include
    android:id="@+id/permtable"
    android:visibility="gone"
    layout="@layout/permissiontable"></include>
 <android.support.v7.widget.AppCompatButton
     android:id="@+id/set"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="@string/set"
     android:visibility="gone"/>
</LinearLayout>