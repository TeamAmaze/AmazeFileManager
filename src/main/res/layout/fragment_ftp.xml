<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_ftp"
        android:layout_margin="@dimen/material_generic"
        app:cardElevation="@dimen/material_generic_card_elevation"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/material_generic"
                android:paddingBottom="@dimen/material_generic"
                android:paddingTop="@dimen/material_generic"
                >

                <!-- status -->
                <TextView
                    android:id="@+id/text_view_ftp_status"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/material_generic_medium"
                    android:textSize="@dimen/material_generic_title_large"
                    />

                <View
                    android:id="@+id/divider_ftp_status"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_divider"
                    android:background="@color/divider"
                    android:layout_marginTop="@dimen/material_generic"
                    android:layout_marginBottom="@dimen/material_generic"
                    />

                <!-- username -->
                <TextView
                    android:id="@+id/text_view_ftp_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/material_generic_title"
                    android:layout_marginBottom="@dimen/material_generic"
                    />

                <!-- password -->
                <TextView
                    android:id="@+id/text_view_ftp_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/material_generic_title"
                    android:layout_marginBottom="@dimen/material_generic"
                    />

                <!-- port -->
                <TextView
                    android:id="@+id/text_view_ftp_port"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/material_generic_title"
                    android:layout_marginBottom="@dimen/material_generic"
                    />

                <!-- shared path -->
                <TextView
                    android:id="@+id/text_view_ftp_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/material_generic_title"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/divider_ftp_start"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_divider"
                    android:background="@color/divider"
                    android:layout_marginBottom="@dimen/material_generic"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_generic_medium"
                    android:text="@string/start_ftp"
                    android:id="@+id/startStopButton"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_marginBottom="@dimen/material_generic"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>