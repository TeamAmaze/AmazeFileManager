<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#d5d5d5"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="1dp"/>
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <padding
                android:left="16dp"
                android:top="4dp"
                android:right="16dp"
                android:bottom="4dp"/>
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>